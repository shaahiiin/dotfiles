{
    "tslint.alwaysShowRuleFailuresAsWarnings": false,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.formatOnSaveFiletypes": [],
    // "python.jediEnabled": false,
    "python.formatting.provider": "black",
    "python.sortImports.path": "isort",
    // MPLS linting config
    "python.analysis.errors": ["undefined-variable"],
    "python.analysis.warnings": ["unknown-parameter-name"],
    "python.analysis.information": ["unresolved-import"],
    "yank.limit": 3,
    "highlight.disableLanguages": ["git"],
    // "git.enableGutters": false,
    "todolist.monitor": true
}
